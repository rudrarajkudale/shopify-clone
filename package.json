{
  "name": "shopify",
  "version": "1.0.0",
  "description": "A simple E-Commerce webapp",
  "main": "server.js",
  "type": "module",
  "scripts": {
    "server-install": "npm install",
    "client-install": "npm install --prefix client",
    "setup": "npm run server-install && npm run client-install",
    "server": "nodemon server/server.js",
    "client": "npm run dev --prefix client",
    "dev": "concurrently \"npm run client\" \"npm run server\""
  },
  "keywords": [
    "MERN"
  ],
  "author": "hasin023",
  "license": "ISC",
  "devDependencies": {
    "nodemon": "^3.1.0"
  },
  "dependencies": {
    "bcrypt": "^5.1.1",
    "concurrently": "^8.2.2",
    "cookie-parser": "^1.4.6",
    "cors": "^2.8.5",
    "dotenv": "^16.4.5",
    "express": "^4.18.3",
    "express-async-handler": "^1.2.0",
    "express-formidable": "^1.2.0",
    "jsonwebtoken": "^9.0.2",
    "mongodb": "^6.5.0",
    "mongoose": "^8.2.1",
    "multer": "^1.4.5-lts.1",
    "react-slick": "^0.30.2",
    "slick-carousel": "^1.8.1",
    "sslcommerz-lts": "^1.1.0"
  }
}
